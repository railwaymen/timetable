openapi: 3.0.1
servers:
  - url: <%= [request.protocol, request.host_with_port, '/api'].join %>
tags:
  - name: Session

paths:
  /users/sign_in:
    post:
      tags:
        - Session
      requestBody:
        content:
          application/json:
            schema:
              required:
                - email
                - password
              properties:
                email:
                  type: string
                  example: admin@example.com
                password:
                  type: string
                  example: password
      responses:
        200:
          content:
            application/json:
              schema:
                type: object
                required:
                  - id
                  - first_name
                  - last_name
                  - token
                  - is_leader
                  - admin
                  - manger
                  - staff_manager
                properties:
                  id:
                    type: integer
                    example: 1
                  first_name:
                    type: string
                    example: John
                  last_name:
                    type: string
                    example: Smith
                  token:
                    type: string
                    example: eyJhbGciOiJIUzI1NiJ9.eyJpZCI6NH0.P3BMpG0CHZArdYBrzWHxuu7zQlT4j9WZNY0qkqtxmJ0
                  is_leader:
                    type: boolean
                    example: false
                  admin:
                    type: boolean
                    example: false
                  manager:
                    type: boolean
                    example: false
                    required: true
                  staff_manager:
                    type: boolean
                    example: false
        422:
          content:
            application/json:
              schema:
                type: object
                properties:
                  errors:
                    type: object
                example:
                  errors:
                    base:
                      - error: invalid_email_or_password
                      - error: inactive
  /projects:
    get:
      tags:
        - Projects
      security:
        - authentication: []
      responses:
        200:
          content:
            application/json:
              schema:
                type: array
                items:
                  type: object
                  required:
                    - project_id
                    - name
                    - color
                    - users
                  properties:
                    project_id:
                      type: integer
                      example: 1
                    name:
                      type: string
                      example: Project
                    color:
                      type: string
                      example: 08e51a
                    leader_first_name:
                      type: string
                      example: John
                    leader_last_name:
                      type: string
                      example: Smith
                    users:
                      type: array
                      items:
                        type: object
                        required:
                          - id
                          - first_name
                          - last_name
                        properties:
                          id:
                            type: integer
                            example: 1
                          first_name:
                            type: string
                            example: John
                          last_name:
                            type: string
                            example: Smith
  /projects/simple:
    get:
      tags:
        - Projects
      security:
        - authentication: []
      responses:
        200:
          content:
            application/json:
              schema:
                type: array
                items:
                  type: object
                  required:
                    - id
                    - name
                    - internal
                    - active
                    - work_times_allows_task
                    - color
                    - lunch
                    - autofill
                    - count_duration
                    - taggable
                  properties:
                    id:
                      type: integer
                      example: 1
                    name:
                      type: string
                      example: Project 1
                    internal:
                      type: boolean
                      example: false
                    active:
                      type: boolean
                      example: true
                    work_times_allows_task:
                      type: boolean
                      example: true
                    color:
                      type: string
                      example: 0c0c0c
                    lunch:
                      type: boolean
                      example: false
                    autofill:
                      type: boolean
                      example: false
                    count_duration:
                      type: boolean
                      example: false
                    taggable:
                      type: boolean
                      example: false
  /projects/tags:
    get:
      tags:
        - Projects
      security:
        - authentication: []
      responses:
        200:
          content:
            application/json:
              schema:
                type: array
                example: ["dev", "im", "cc", "res"]
  /work_times:
    get:
      tags:
        - Work times
      security:
        - authentication: []
      parameters:
        - name: project_id
          in: query
          schema:
            type: integer
        - name: from
          in: query
          schema:
            type: string
            example: "2020-03-01T00:00:00.000Z"
        - name: to
          in: query
          schema:
            type: string
            example: "2020-03-31T23:59:59.000Z"
      responses:
        200:
          content:
            application/json:
              schema:
                type: array
                items:
                  $ref: '#/components/schemas/WorkTime'
    post:
      tags:
        - Work times
      security:
        - authentication: []
      requestBody:
        content:
          application/json:
            schema:
              required:
                - project_id
                - starts_at
                - ends_at
              properties:
                project_id:
                  type: integer
                  example: 2
                body:
                  type: string
                  example: My work
                task:
                  type: string
                  example: https//jira.com/TASK-XXX
                tag:
                  type: string
                  example: dev
                  default: dev
                  enum: ['dev', 'im', 'cc', 'res']
                starts_at:
                  type: string
                  example: "2020-03-04T08:00:00.000Z"
                ends_at:
                  type: string
                  example: "2020-03-04T010:00:00.000Z"
      responses:
        200:
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/WorkTime'
        422:
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/WorkTimeValidation'
  /work_times/create_filling_gaps:
    post:
      tags:
        - Work times
      security:
        - authentication: []
      requestBody:
        content:
          application/json:
            schema:
              required:
                - project_id
                - starts_at
                - ends_at
              properties:
                project_id:
                  type: integer
                  example: 2
                body:
                  type: string
                  example: My work
                task:
                  type: string
                  example: https//jira.com/TASK-XXX
                tag:
                  type: string
                  example: dev
                  default: dev
                  enum: ['dev', 'im', 'cc', 'res']
                starts_at:
                  type: string
                  example: "2020-03-04T08:00:00.000Z"
                ends_at:
                  type: string
                  example: "2020-03-04T010:00:00.000Z"
      responses:
        200:
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/WorkTime'
        422:
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/WorkTimeValidation'
  /work_times/{id}:
    get:
      tags:
        - Work times
      security:
        - authentication: []
      parameters:
        - name: id
          in: path
          required: true
          schema:
            type: integer
      responses:
        200:
          content:
            application/json:
              schema:
                allOf:
                  - $ref: '#/components/schemas/WorkTime'
                  - type: object
                    properties:
                      sum_duration:
                        type: integer
                        example: 3600
                      versions:
                        type: array
                        items:
                          allOf:
                            - $ref: '#/components/schemas/WorkTime'
                            - type: object
                              properties:
                                event:
                                  type: string
                                  enum: ['create', 'update']
                                updated_by:
                                  type: string
                                  example: John Smith
                                created_at:
                                  type: string
                                  format: date-time
                                changeset:
                                  type: array
                                  example: ["project_id", "start_at", "ends_at"]
    put:
      tags:
        - Work times
      security:
        - authentication: []
      parameters:
        - name: id
          in: path
          required: true
          schema:
            type: integer
      requestBody:
        content:
          application/json:
            schema:
              required:
                - project_id
                - starts_at
                - ends_at
              properties:
                project_id:
                  type: integer
                  example: 2
                body:
                  type: string
                  example: My work
                task:
                  type: string
                  example: https//jira.com/TASK-XXX
                tag:
                  type: string
                  example: dev
                  default: dev
                  enum: ['dev', 'im', 'cc', 'res']
                starts_at:
                  type: string
                  example: "2020-03-04T08:00:00.000Z"
                ends_at:
                  type: string
                  example: "2020-03-04T010:00:00.000Z"
      responses:
        200:
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/WorkTime'
        422:
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/WorkTimeValidation'
    delete:
      tags:
        - Work times
      security:
        - authentication: []
      parameters:
        - name: id
          in: path
          required: true
          schema:
            type: integer
      responses:
        204:
          description:
  /accounting_periods:
    get:
      tags:
        - Accounting periods
      security:
        - authentication: []
      parameters:
        - name: page
          in: query
          schema:
            type: integer
        - name: per_page
          description: Records per page. By default it is 24
          in: query
          schema:
            type: integer
      responses:
        200:
          content:
            application/json:
              schema:
                type: object
                required:
                  - total_pages
                  - recounting
                  - accounting_periods
                properties:
                  total_pages:
                    type: integer
                    example: 20
                  recounting:
                    type: boolean
                    example: false
                  records:
                    type: array
                    items:
                      $ref: '#/components/schemas/AccountingPeriod'
  /accounting_periods/matching_fulltime:
    get:
      tags:
        - Accounting periods
      security:
        - authentication: []
      parameters:
        - name: date
          description: Date for which it should calculate work time statistics based on accounting periods
          in: query
          schema:
            type: string
            example: "<%= Date.today %>"
      responses:
        200:
          content:
            application/json:
              schema:
                type: object
                properties:
                  accounting_period:
                    $ref: '#/components/schemas/AccountingPeriod'
                  should_worked:
                    type: integer
                    example: 604800
  /vacations:
    get:
      tags:
        - Vacations
      security:
        - authentication: []
      parameters:
        - name: year
          in: query
          schema:
            type: integer
            example: "<%= Date.current.year %>"
      responses:
        200:
          content:
            application/json:
              schema:
                type: object
                required:
                  - available_vacation_days
                  - used_vacation_days
                  - vacations
                properties:
                  available_vacation_days:
                    type: integer
                    example: 0
                  used_vacation_days:
                    type: object
                    properties:
                      care:
                        type: integer
                        example: 0
                      compassionate:
                        type: integer
                        example: 0
                      illness:
                        type: integer
                        example: 0
                      parental:
                        type: integer
                        example: 0
                      paternity:
                        type: integer
                        example: 0
                      planned:
                        type: integer
                        example: 0
                      rehabilitation:
                        type: integer
                        example: 0
                      requested:
                        type: integer
                        example: 0
                      unpaid:
                        type: integer
                        example: 0
                      upbringing:
                        type: integer
                        example: 0
                  records:
                    type: array
                    items:
                      $ref: '#/components/schemas/Vacation'
    post:
      tags:
        - Vacations
      security:
        - authentication: []
      requestBody:
        content:
          application/json:
            schema:
              required:
                - vacation_type
                - start_date
                - end_date
              properties:
                vacation_type:
                  type: string
                  enum: ['planned', 'requested', 'compassionate', 'others']
                description:
                  type: string
                  example:
                  description: Required when vacation_type equals 'others'
                start_date:
                  type: string
                  example: "2020-04-22"
                end_date:
                  type: string
                  example: "2020-04-24"
      responses:
        200:
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/Vacation'
        422:
          content:
            application/json:
              schema:
                type: object
                required:
                  - errors
                properties:
                  errors:
                    type: object
                example:
                  errors:
                    base:
                      - error: work_time_exists
                    description:
                      - error: blank
                    start_date:
                      - error: greater_than_end_date
                      - error: blank
                    end_date:
                      - error: blank
                    vacation_type:
                      - error: blank
                      - error: inclusion
  /vacations/{id}/self_decline:
    put:
      tags:
        - Vacations
      security:
        - authentication: []
      parameters:
        - name: id
          in: path
          required: true
          schema:
            type: integer
      responses:
        204:
          description:
        404:
          description:
  /remote_works:
    get:
      tags:
        - Remote work
      security:
        - authentication: []
      parameters:
        - name: page
          in: query
          schema:
            type: integer
        - name: per_page
          description: Records per page. By default it is 24
          in: query
          schema:
            type: integer
      responses:
        200:
          content:
            application/json:
              schema:
                required:
                  - total_pages
                  - records
                properties:
                  total_pages:
                    type: integer
                    example: 20
                  records:
                    type: array
                    items:
                      $ref: '#/components/schemas/RemoteWork'
    post:
      tags:
        - Remote work
      security:
        - authentication: []
      requestBody:
        content:
          application/json:
            schema:
              required:
                - starts_at
                - ends_at
              properties:
                note:
                  type: string
                starts_at:
                  type: string
                  example: "2020-03-04T08:00:00.000Z"
                ends_at:
                  type: string
                  example: "2020-03-04T010:00:00.000Z"
      responses:
        200:
          content:
            application/json:
              schema:
                type: array
                items:
                  $ref: '#/components/schemas/RemoteWork'
        422:
          content:
            application/json:
              schema:
                type: object
                properties:
                  errors:
                    type: object
                example:
                  errors:
                    starts_at:
                      - error: overlap
                      - error: too_old
                      - error: blank
                      - error: incorrect_hours
                    ends_at:
                      - error: blank
  /remote_works/{id}:
    put:
      tags:
        - Remote work
      security:
        - authentication: []
      parameters:
        - name: id
          in: path
          required: true
          schema:
            type: integer
      requestBody:
        content:
          application/json:
            schema:
              required:
                - starts_at
                - ends_at
              properties:
                note:
                  type: string
                starts_at:
                  type: string
                  example: "2020-03-04T08:00:00.000Z"
                ends_at:
                  type: string
                  example: "2020-03-04T010:00:00.000Z"
      responses:
        200:
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/RemoteWork'
        422:
          content:
            application/json:
              schema:
                type: object
                properties:
                  errors:
                    type: object
                example:
                  errors:
                    starts_at:
                      - error: overlap
                      - error: overlap_midnight
                      - error: too_old
                      - error: blank
                      - error: incorrect_hours
                    ends_at:
                      - error: blank
    delete:
      tags:
        - Remote work
      security:
        - authentication: []
      parameters:
        - name: id
          in: path
          required: true
          schema:
            type: integer
      responses:
        204:
          description:
        404:
          description:
components:
  schemas:
    AccountingPeriod:
      type: object
      required:
        - id
        - user_id
        - duration
        - count_duration
        - closed
        - protected
        - full_time
        - position
      properties:
        id:
          type: integer
          example: 1
        user_id:
          type: integer
          example: 1
        starts_at:
          type: 
          example: null
        ends_at:
          type: 
          example: null
        counted_duration:
          type: integer
          example: 0
        duration:
          type: integer
          example: 604800
        closed:
          type: boolean
          example: false
        note:
          type: string
          example: Some note
        position:
          type: integer
          example: 3
        full_time:
          type: boolean
          example: false
        protected:
          type: boolean
          example: false
    RemoteWork:
      type: object
      required:
        - id
        - user_id
        - creator_id
        - duration
        - starts_at
        - ends_at
        - updated_by_admin
      properties:
        id:
          type: integer
          example: 1
        creator_id:
          type: integer
          example: 1
        starts_at:
          type: string
          example: "2020-03-04T08:00:00.000Z"
        ends_at:
          type: string
          example: "2020-03-04T010:00:00.000Z"
        duration:
          type: integer
          example: 604800
        note:
          type: string
        updated_by_admin:
          type: boolean
          example: false
        user_id:
          type: integer
          example: 3
    WorkTime:
      type: object
      required:
        - id
        - updated_by_admin
        - project_id
        - starts_at
        - ends_at
        - duration
        - tag
        - user_id
        - date
        - project
      properties:
        id:
          type: integer
          example: 1
        updated_by_admin:
          type: boolean
          example: false
        project_id:
          type: integer
          example: 2
        starts_at:
          type: string
          example: "2020-03-04T08:00:00.000Z"
        ends_at:
          type: string
          example: "2020-03-04T010:00:00.000Z"
        duration:
          type: integer
          example: 7200
        body:
          type: string
          example: My work
        task:
          type: string
          example: https//jira.com/TASK-XXX
        tag:
          type: string
          example: dev
          default: dev
          description: dev - default value for development work time. im - internal metting. cc - client communication. res - research.
          enum: ['dev', 'im', 'cc', 'res']
        task_preview:
          type: string
          example: TASK-XXX
        user_id:
          type: integer
          example: 1
        date:
          type: string
          example: "2020-03-04"
        project:
          type: object
          required:
            - id
            - name
            - color
            - work_times_allows_task
            - lunch
            - count_duration
            - taggable
          properties:
            id:
              type: integer
              example: 2
            name:
              type: string
              example: Foo
            color:
              type: string
              example: 08e51a
            work_times_allows_task:
              type: boolean
              example: true
            lunch:
              type: boolean
              example: false
            count_duration:
              type: boolean
              example: true
            taggable:
              type: boolean
              example: true
    WorkTimeValidation:
      type: object
      required:
        - errors
      properties:
        errors:
          type: object
      example:
        errors:
          body:
            - error: body_or_task_blank
          task:
            - error: invalid_uri
            - error: invalid_external
          starts_at:
            - error: overlap
            - error: too_old
            - error: overlap_midnight
            - error: no_gaps_to_fill
          duration:
            - error: greater_than
          project_id:
            - error: blank
    Vacation:
      type: object
      required:
        - id
        - start_date
        - end_date
        - vacation_type
        - status
        - full_name
        - business_days_count
      properties:
        id:
          type: integer
          example: 1
        start_date:
          type: string
          example: "2020-04-22"
        end_date:
          type: string
          example: "2020-04-24"
        vacation_type:
          type: string
          example: planned
          enum: ['planned', 'requested', 'compassionate', 'others']
        status:
          type: string
          example: unconfirmed
          enum: ['unconfirmed', 'declined', 'approved', 'accepted']
        full_name:
          type: string
          example: Harber Vanda
        business_days_count:
          type: integer
          example: 2
  securitySchemes:
    authentication:
      type: apiKey
      name: token
      in: header
